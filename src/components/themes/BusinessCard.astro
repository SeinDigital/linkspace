---
import { Icon } from 'astro-icon/components';
import type { LinksConfig } from '../../types/config';

interface Props {
    config: LinksConfig;
}

const { fullName, bio = '', avatar = '', links = [], socials = [] }: LinksConfig = Astro.props.config;
---

<div class="container mx-auto px-4 py-8 max-w-md">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body items-center text-center">
            <div class="avatar">
                {
                    avatar && (
                    <div class="w-24 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                        <img src={avatar} alt="Profile" />
                    </div>)
                }
            </div>
            
            <h1 class="text-2xl font-bold mt-4">{fullName}</h1>
            <p class="text-base-content/70">{bio}</p>
            
            <div class="divider"></div>
            
            <div class="w-full space-y-3">
                {
                    links.map((link) => (
                    <a href={link.url} class="btn w-full" class:list={link.classes}>
                        <Icon name={link.icon} class="w-5 h-5" />
                        {link.title}
                    </a>
                    ))
                }
            </div>
            
            <div class="divider"></div>
            
            <div class="flex gap-4">
                {
                    socials.map((social) => (
                    <a href={social.url} class="btn btn-circle btn-outline">
                        <Icon name={social.icon} class="w-5 h-5" />
                    </a>
                    ))
                }
            </div>
        </div>
    </div>
</div>