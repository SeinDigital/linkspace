---
interface Props {
  title: string;
  classes?: string;
}

const { title, classes="bg-base-200" } = Astro.props;
---

<html lang="en" data-theme="garden">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
</head>
<body class="min-h-screen" class:list={classes}>
  <slot />
</body>
</html>